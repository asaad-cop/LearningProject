<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show this project', project %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Project  %>
  <%= link_to 'New Project', new_project_path %>
<% end %>